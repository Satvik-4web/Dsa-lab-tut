#include <stdio.h>
#include <string.h>

#define MAX 100

int main() {
    char expr[MAX], stack[MAX];
    int top = -1;

    printf("Enter expression: ");
    gets(expr);

    for (int i = 0; i < strlen(expr); i++) {
        if (expr[i] == '(' || expr[i] == '{' || expr[i] == '[')
            stack[++top] = expr[i];
        else if (expr[i] == ')' || expr[i] == '}' || expr[i] == ']') {
            if (top == -1) {
                printf("Unbalanced\n");
                return 0;
            }
            char open = stack[top--];
            if ((expr[i] == ')' && open != '(') ||
                (expr[i] == '}' && open != '{') ||
                (expr[i] == ']' && open != '[')) {
                printf("Unbalanced\n");
                return 0;
            }
        }
    }

    if (top == -1)
        printf("Balanced\n");
    else
        printf("Unbalanced\n");

    return 0;
}
