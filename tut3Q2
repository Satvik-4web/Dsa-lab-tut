#include <stdio.h>
#include <string.h>

#define MAX 100

int main() {
    char str[MAX], stack[MAX];
    int top = -1;

    printf("Enter a string: ");
    gets(str);

    for (int i = 0; i < strlen(str); i++)
        stack[++top] = str[i];

    printf("Reversed string: ");
    while (top != -1)
        printf("%c", stack[top--]);

    return 0;
}
